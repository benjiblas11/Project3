<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top 100 Movies</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <!-- Main header -->
    <div class="header">Top 100 Movies</div>

    <!-- Container for movies and filters -->
    <div class="movies-page">
        <!-- Filters section (top) -->
        <div class="movies-header">
            <h1>Movies</h1>
            <div class="filters">
                <input type="text" placeholder="Search" class="search-bar" />
                <select>
                    <option>All Years</option>
                </select>
                <select>
                    <option>All Genres</option>
                </select>
                <label><input type="checkbox">Unwatched Only</label>
            </div>
        </div>

        <!-- Movies section -->
        <div class="movies-grid" id="movies-section" style="overflow-y: auto; max-height: calc(100vh - 150px);">
            <% if (movie_info.length > 0) { %>
                <% movie_info.forEach(movie => { %>
                    <div class="movie-card">
                        <div class="movie-rank"><%= movie.movie_rank %></div>
                        <a href="/view_movie/<%= movie.movie_rank %>">
                            <img src="<%= movie.image_url %>" alt="<%= movie.title %>" class="movie-poster">
                        </a>
                        <h2><%= movie.title %></h2>
                        <div class="movie-rating">
                            <span class="rating-star">â˜…</span>
                            <%= movie.rating %>
                        </div>
                        <a href="<%= movie.imdb_link %>" class="movie-link" target="_blank">View on IMDb</a>
                    </div>
                <% }); %>
            <% } else { %>
                <div>No data available</div>
            <% } %>
        </div>
    </div>
</body>
</html>
