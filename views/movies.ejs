<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top 100 Movies</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        .movie-checkbox input[type="checkbox"] {
            width: 20px;
            height: 20px;
        }
    </style>
</head>
<body>
    <!-- Container for movies and filters -->
    <div class="movies-page">
        <!-- Filters section (top) -->
        <div class="movies-header">
            <h1>Movies</h1>
            <div class="filters">
                <input type="text" placeholder="Search" class="search-bar" />
                <select>
                    <option>All Decades</option>
                    <option>40's</option>
                    <option>50's</option>
                    <option>60's</option>
                    <option>70's</option>
                    <option>80's</option>
                    <option>90's</option>
                    <option>2000's</option>
                    <option>2010's</option>
                    <option>2020's</option>
                </select>
                <select>
                    <option>All Directors</option>
                    <option>Akira Kurosawa</option>
                    <option>Alfred Hitchcock</option>
                    <option>Andrew Stanton</option>
                    <option>Anthony Russo, Joe Russo</option>
                    <option>Billy Wilder</option>
                    <option>Bob Persichetti, Peter Ramsey, Rodney Rothman</option>
                    <option>Bong Joon Ho</option>
                    <option>Brian De Palma</option>
                    <option>Bryan Singer</option>
                    <option>Charles Chaplin</option>
                    <option>Charlie Chaplin</option>
                    <option>Christopher Nolan</option>
                    <option>Damien Chazelle</option>
                    <option>Darren Aronofsky</option>
                    <option>David Fincher</option>
                    <option>David Lean</option>
                    <option>Elem Klimov</option>
                    <option>Fernando Meirelles, Kátia Lund</option>
                    <option>Florian Henckel von Donnersmarck</option>
                    <option>Francis Ford Coppola</option>
                    <option>Frank Capra</option>
                    <option>Frank Darabont</option>
                    <option>George Lucas</option>
                    <option>Giuseppe Tornatore</option>
                    <option>Gus Van Sant</option>
                    <option>Hayao Miyazaki</option>
                    <option>Irvin Kershner</option>
                    <option>Isao Takahata</option>
                    <option>James Cameron</option>
                    <option>John Lasseter</option>
                    <option>Jonathan Demme</option>
                    <option>Joseph Kosinski</option>
                    <option>Lana Wachowski, Lilly Wachowski</option>
                    <option>Lee Unkrich, Adrian Molina</option>
                    <option>Luc Besson</option>
                    <option>Makoto Shinkai</option>
                    <option>Martin Scorsese</option>
                    <option>Masaki Kobayashi</option>
                    <option>Mel Gibson</option>
                    <option>Michael Curtiz</option>
                    <option>Michael Mann</option>
                    <option>Michel Gondry</option>
                    <option>Milos Forman</option>
                    <option>Nadine Labaki</option>
                    <option>Olivier Nakache, Éric Toledano</option>
                    <option>Park Chan-wook</option>
                    <option>Peter Jackson</option>
                    <option>Quentin Tarantino</option>
                    <option>Rajkumar Hirani</option>
                    <option>Richard Marquand</option>
                    <option>Ridley Scott</option>
                    <option>Roberto Benigni</option>
                    <option>Robert Zemeckis</option>
                    <option>Roger Allers, Rob Minkoff</option>
                    <option>Roman Polanski</option>
                    <option>Sam Mendes</option>
                    <option>Sergio Leone</option>
                    <option>Sidney Lumet</option>
                    <option>Stanley Kubrick</option>
                    <option>Steven Spielberg</option>
                    <option>Thomas Kail</option>
                    <option>Thomas Vinterberg</option>
                    <option>T.J. Gnanavel</option>
                    <option>Todd Phillips</option>
                    <option>Tony Kaye</option>
                </select>
                <select>
                    <option> ALL MPAA Rating</option>
                    <option>G</option>
                    <option>PG</option>
                    <option>PG-13</option>
                    <option>R</option>
                    <option>NR</option>
                    <option>Approved</option>
                </select>
                <label><input type="checkbox"> Unwatched</label>
            </div>
        </div>
        <!-- Movies section -->
        <div class="movies-grid" id="movies-section" style="overflow-y: auto; max-height: calc(100vh - 150px);">
            <% if (movie_info.length > 0) { %>
                <% movie_info.forEach(movie => { %>
                    <div class="movie-card">
                        <div class="movie-rank"><%= movie.movie_rank %></div>
                        <a href="/view_movie/<%= movie.movie_rank %>">
                            <img src="<%= movie.image_url %>" alt="<%= movie.title %>" class="movie-poster">
                        </a>
                        <h2><%= movie.title %></h2>
                        <div class="movie-checkbox">
                            <form action="/update_status" method="POST">
                                <input type="hidden" name="movie_rank" value="<%= movie.rank %>">
                                <label>
                                    <input type="checkbox" name="watched_status" <%= movie.watched_status ? 'checked' : '' %>>
                                </label>
                            </form>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div>No data available</div>
            <% } %>
        </div>
    </div>
</body>
</html>